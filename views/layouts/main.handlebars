  {{!-- Begin::Client Modal --}}
  <div id="modal-js-example" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
      <header class="modal-card-head">
        <p class="modal-card-title">New Client</p>
        <button class="delete" aria-label="close"></button>
      </header>
      <section class="modal-card-body">
        <form class="signup-form" id="clientForm">
          <div class="field">
            <label class="label" for="name-signup">Name:</label>
            <div class="control">
              <input class="input" type="text" id="name-signup" placeholder="Name">
            </div>
          </div>
          <div class="field">
            <label class="label" for="phoneNumber-signup">Phone Number:</label>
            <div class="control">
              <input class="input" type="text" id="phoneNumber-signup" placeholder="Phone Number">
            </div>
          </div>
          <div class="field">
            <label class="label" for="repairOrderNumber-signup">Repair Order Number:</label>
            <div class="control">
              <input class="input" type="text" id="repairOrderNumber-signup" placeholder="Repair Order Number">
            </div>
          </div>
          <div class="field">
            <label class="label" for="carModel-signup">Car Model:</label>
            <div class="control">
              <input class="input" type="text" id="carModel-signup" placeholder="Car Model">
            </div>
          </div>
          <div class="field">
            <label class="label" for="serviceRequested-signup">Service Requested:</label>
            <div class="control">
              <input class="input" type="text" id="serviceRequested-signup" placeholder="Service Requested">
            </div>
          </div>
          <div class="field">
            <label class="label checkbox" for="waitingForService-signup">Waiter:</label>
            <div class="control">
              <input type="checkbox" id="waitingForService-signup" placeholder="Waiting For Service">
            </div>
          </div>
      </section>
      <footer class="modal-card-foot">
        <div class="buttons">
          <button class="button is-success" type="submit">Save</button>
          <button class="button">Cancel</button>
        </div>
      </footer>
      </form>
    </div>
    <button class="modal-close is-large" aria-label="close"></button>
  </div>
